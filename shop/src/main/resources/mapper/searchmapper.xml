<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.app.repository.SearchRepository">

    <select id="findByAddrAndType" parameterType="Integer" resultType="Search">
        SELECT * FROM search where type = #{type}
    </select>
    <select id="selectAll" resultType="Search">
        SELECT * FROM search
    </select>
    <insert id="insert" parameterType="Search">
        INSERT INTO search VALUES (#{type}, #{addr})
    </insert>
    <update id="update" parameterType="Search">
        UPDATE search SET type=#{type}, addr=#{addr} where type=#{type}
    </update>
    <delete id="delete" parameterType="Search">
        DELETE FROM search WHERE type=#{type}
    </delete>

</mapper>