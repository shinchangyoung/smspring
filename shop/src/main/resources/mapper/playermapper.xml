<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.app.repository.SplayerRepository">

    <select id="selectPlayerList" resultType="Splayer">
        SELECT *
        FROM splayer
        <where>
            <if test="playerName != null and playerName != ''">
                player_name LIKE CONCAT('%', #{playerName}, '%')
            </if>
        </where>
    </select>
    <select id="select" parameterType="String" resultType="Splayer">
        SELECT * FROM splayer WHERE =#{playerId}
    </select>
    <select id="selectAll" resultType="Splayer">
        SELECT * FROM splayer
    </select>



</mapper>