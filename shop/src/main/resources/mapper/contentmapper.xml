<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="eud.sm.app.repository.ContentRepository">
    <select id="findByLoc" parameterType="Integer" resultType="Content">
        SELECT * FROM content WHERE loc=#{loc}
    </select>
    <select id="select" parameterType="Integer" resultType="Content">
        SELECT * FROM content WHERE target=#{target}
    </select>
    <select id="selectAll" resultType="Content">
        SELECT * FROM content
    </select>
    <insert id="insert" parameterType="Content">
        INSERT INTO content VALUES (#{target},#{title},#{img}, #{lat}, #{lng}, #{loc})
    </insert>
    <update id="update" parameterType="Content">
        UPDATE content SET title=#{title},img=#{img}, lat=#{lat}, lng=#{lng}, loc=#{loc} WHERE target=#{target}
    </update>
    <delete id="delete" parameterType="Content">
        DELETE FROM content WHERE target=#{target}
    </delete>

</mapper>